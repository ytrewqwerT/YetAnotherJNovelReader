<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/reader">
        <SwitchPreference
            android:key="HORIZONTAL_READER"
            android:title="Paged Reader"
            android:defaultValue="false"
            android:summary="Swipe horizontally to change pages" />
        <SeekBarPreference
            app:key="FONT_SIZE"
            app:title="@string/font_size"
            app:defaultValue="15"
            app:min="8"
            android:max="32"
            app:showSeekBarValue="true" />
        <com.ytrewqwert.yetanotherjnovelreader.settings.FloatSeekBarPreference
            android:key="LINE_SPACING"
            android:title="@string/line_spacing"
            android:defaultValue="1.0"
            app:minValue="0.5"
            app:maxValue="2.0"
            app:valueSpacing="0.1"
            app:format="%.1f" />
        <com.ytrewqwert.yetanotherjnovelreader.settings.FloatSeekBarPreference
            android:key="PARA_SPACING"
            android:title="@string/paragraph_spacing"
            android:defaultValue="0.0"
            app:minValue="0.0"
            app:maxValue="2.0"
            app:valueSpacing="0.1"
            app:format="%.1f" />
        <SeekBarPreference
            app:key="PARA_INDENT"
            app:title="@string/paragraph_indentation"
            app:defaultValue="100"
            app:min="0"
            android:max="500"
            app:showSeekBarValue="true" />
        <ListPreference
            android:key="FONT_STYLE"
            android:title="Font"
            android:summary="%s"
            android:defaultValue="1"
            android:entries="@array/font_names"
            android:entryValues="@array/font_files" />
    </PreferenceCategory>

    <Preference
        android:title="Margins"
        android:summary="Adjust margins around the reader"
        android:fragment="com.ytrewqwert.yetanotherjnovelreader.settings.MarginFragment" />

</PreferenceScreen>