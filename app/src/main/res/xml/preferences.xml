<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/reader">
        <SwitchPreference
            android:key="HORIZONTAL_READER"
            android:title="Paged Reader"
            android:defaultValue="false"
            android:summary="Swipe horizontally to change pages" />
        <SeekBarPreference
            app:key="FONT_SIZE"
            app:title="@string/font_size"
            app:defaultValue="15"
            app:min="8"
            android:max="32"
            app:showSeekBarValue="true" />
        <ListPreference
            android:key="FONT_STYLE"
            android:title="Font"
            android:summary="%s"
            android:defaultValue="1"
            android:entries="@array/font_names"
            android:entryValues="@array/font_files" />
        <SeekBarPreference
            app:key="READER_MARGIN"
            app:title="Margin"
            app:defaultValue="16"
            app:min="0"
            android:max="64"
            app:showSeekBarValue="true" />
    </PreferenceCategory>


</PreferenceScreen>